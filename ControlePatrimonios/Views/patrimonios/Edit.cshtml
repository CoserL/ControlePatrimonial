@model ControlePatrimonios.patrimonio

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Patrimônios</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idPatrimonio)

        <div class="form-group">
            @Html.Label("Número do patrimônio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.numPatrimonio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numPatrimonio, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.idBem)

        @Html.HiddenFor(model => model.idCategoria)

        @Html.HiddenFor(model => model.idSala)

        @Html.HiddenFor(model => model.idPredio)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
